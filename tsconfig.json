{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "node",
      "express",
      "cookie-parser",
      "express-session",
      "passport"
    ],
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "config/*": ["../config/*"],
      "models/*": ["../models/*"]
    }
  },
  "include": ["src/**/*.ts", "src/config/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
